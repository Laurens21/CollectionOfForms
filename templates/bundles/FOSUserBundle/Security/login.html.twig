{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}

{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<h3 class="login-heading mb-4" style="text-align: center">Welcome back!</h3>
<form action="{{ path("fos_user_security_check") }}" method="post">
    <div style="display: flex; flex-wrap: wrap; align-items: center; justify-content: center; flex-direction:column">    
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="form-label-group" style="width: 33%; margin: 0 5%">
            <h4 class="register-heading mb-2">Email / Username</h4>
            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" autocomplete="username" placeholder="Email / Username" required autofocus>
        </div>

        <div class="form-label-group" style="width: 33%; margin: 0 5%">
            <h4 class="register-heading mb-2">Password</h4>
            <input type="password" id="password" name="_password" class="form-control" placeholder="Password" required autocomplete="current-password">
        </div>

        <div class="custom-control custom-checkbox mb-3" style="width: 33%">
            <input type="checkbox" class="custom-control-input" id="remember_me" name="_remember_me" value="on">
            <label class="custom-control-label" for="remember_ME">Remember Password</label>
        </div>
        <div style="width: 100%; display: flex; justify-content:center">
            <div class="form-group form-label-group" style="width: 25%;">
                <br>
                <input type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" value="Login">
            </div>
        </div>
        <div class="text-center">
            <p>Forgot password? <a class="btn btn-sm btn-primary btn-login text-uppercase font-weight-bold" href="#">Click here</a></p>
        </div>
    </div>
</form>

{% endblock fos_user_content %}